                <emailcapture module="remarketing">
                    <title>Email Capture</title>
                    <sort_order>0</sort_order>
                    <action>remarketing/adminhtml_emailcapture</action>
                </emailcapture>
                <abandonedcartreport module="remarketing">
                    <title>Abandoned Carts</title>
                    <sort_order>0</sort_order>
